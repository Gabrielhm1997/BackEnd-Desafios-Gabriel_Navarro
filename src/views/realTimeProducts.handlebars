<h1 class="text-center">Productos en TIEMPO REAL</h1>

<div class="container-fluid text-center">
    <div class="row">
        <div id="acciones" class="col-6">
            <h2>Acciones</h2>
            <div>
                <h3>Crear Producto</h3>

                <form id="formCreateProduct">

                    <div class=>
                        <div>
                            <label for="title">Title</label>
                            <input type="text" name="title" required>
                        </div>

                        <div>
                            <label for="description">Description</label>
                            <input type="text" name="description" required>
                        </div>

                        <div>
                            <label for="category">Category</label>
                            <input type="text" name="category" required>
                        </div>

                        <div>
                            <label for="price">Price</label>
                            <input type="number" name="price" required>
                        </div>

                        <div>
                            <label for="stock">Stock</label>
                            <input type="number" name="stock" required>
                        </div>

                        <div>
                            <label for="code">Code</label>
                            <input type="text" name="code" required>
                        </div>

                        <div>
                            <label for="status">Thumbnail</label>
                            <input type="string" name="thumbnail" required>
                        </div>

                        <div>
                            <label for="status">Status</label>
                            <input type="boolean" name="status" required>
                        </div>

                    </div>

                    <button type="submit">Crear Producto</button>

                </form>
            </div>
            <div>
                <h3>Eliminar Producto</h3>

                <form id="formDeleteProduct">

                    <div>
                        <label for="id">ID</label>
                        <input type="string" name="id" required>
                    </div>

                    <button type="submit">Eliminar Producto</button>

                </form>
            </div>
        </div>
        <div id="productsContainer" class="col-6">
            <h2>Productos</h2>

            <div>
                <ul id="productsList">

                </ul>
            </div>
        </div>
    </div>
</div>